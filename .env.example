# Project Configuration
PROJECT_NAME=wp

# Ports
WEB_PORT=8080
PMA_PORT=8082

# Versions
PHP_VERSION=8.1
MYSQL_VERSION=8.0
WORDPRESS_VERSION=latest
MEMCACHED_VERSION=alpine

# Database Configuration
DB_NAME=wordpress
DB_USER=wordpress
DB_PASSWORD=wordpress
DB_ROOT_PASSWORD=root

# Development Settings
WP_DEBUG=true
WP_DEBUG_LOG=true
WP_DEBUG_DISPLAY=false

# Cache Settings
ENABLE_MEMCACHED=true

# Xdebug Settings (default disabled for performance)
XDEBUG_MODE=off
XDEBUG_CLI_MODE=off
XDEBUG_PORT=9003
XDEBUG_TRIGGER=1

# URL Migration (optional)
# Uncomment and set these if you need to replace URLs during import
# SITE_URL_OLD=https://old-domain.com
# SITE_URL_NEW=http://localhost:8080